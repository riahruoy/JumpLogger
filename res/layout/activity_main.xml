<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/startService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="貢献開始！" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/stopService"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="貢献中断"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <Button
                    android:id="@+id/uploadButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="upload"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" >

                <Button
                    android:id="@+id/goinButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="建物内に入った" />

                <Button
                    android:id="@+id/gooutButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="外に出た" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="47dp"
                android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/checkBoxNWFlag"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="NW測位" />

            <CheckBox
                android:id="@+id/checkBoxLowEnergyFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省電力モード" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBoxGPSFlag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GPS測位" />

            <CheckBox
                android:id="@+id/CheckBoxAccel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加速度,照度,近接" />

            <CheckBox
                android:id="@+id/CheckBoxSSID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SSID,Bluetooth,Sound" />

            <TextView
                android:id="@+id/idTextViewVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="version"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/idTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="your id:"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            
            <TextView
                android:id="@+id/logTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="19dp"
                android:text="ここにログ状態が表示されます"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>